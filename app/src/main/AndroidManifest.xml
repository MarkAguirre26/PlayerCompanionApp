<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/playercompanionlogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/playercompanionlogo"
        android:supportsRtl="true"
        android:theme="@style/Theme.PlayerCompanion"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".BaccaratActivity"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".SicboActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ActivationActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>